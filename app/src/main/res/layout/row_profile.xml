<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="profileRowModel" type="com.uptrain.app.modules.profile.data.model.ProfileRowModel"/>
    </data>
    <LinearLayout android:gravity="start" android:id="@+id/linearMetric"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylecornerRadius_1">
        <TextView android:ellipsize="end" android:id="@+id/txtTitleTwo"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_12pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_3pxh"
            android:singleLine="true"
            android:text="@{profileRowModel.txtTitleTwo}"
            style="@style/txtRobotoregular14" tools:text="@string/lbl_tu_i"/>
        <TextView android:ellipsize="end" android:id="@+id/txtData"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_14pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:singleLine="true"
            android:text="@{profileRowModel.txtData}"
            style="@style/txtRobotomedium20" tools:text="@string/lbl_30"/>
    </LinearLayout>
</layout>
